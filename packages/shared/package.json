{
  "name": "@arb-edge/shared",
  "version": "0.1.0",
  "description": "Shared types, utilities, and configurations for ArbEdge services",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "import": "./dist/utils.js"
    },
    "./config": {
      "types": "./dist/config.d.ts",
      "import": "./dist/config.js"
    },
    "./constants": {
      "types": "./dist/constants.d.ts",
      "import": "./dist/constants.js"
    },
    "./errors": {
      "types": "./dist/errors.d.ts",
      "import": "./dist/errors.js"
    },
    "./validation": {
      "types": "./dist/validation.d.ts",
      "import": "./dist/validation.js"
    },
    "./middleware": {
      "types": "./dist/middleware.d.ts",
      "import": "./dist/middleware.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "dev": "tsup --watch",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "oxlint src",
    "lint:fix": "oxlint src --fix",
    "format": "echo 'Using oxlint for formatting'",
    "format:check": "oxlint src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250620.0",
    "@types/node": "catalog:",
    "tsup": "^8.5.0",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "shared",
    "types",
    "utilities",
    "config",
    "constants",
    "errors",
    "validation",
    "middleware",
    "typescript",
    "arbitrage",
    "trading"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/username/arb-edge.git",
    "directory": "packages/shared"
  }
}