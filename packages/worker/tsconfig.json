{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": [
      "@cloudflare/workers-types"
    ],
    "paths": {
      "@celebrum-ai/shared": [
        "../shared/dist/index"
      ],
      "@celebrum-ai/shared/*": [
        "../shared/dist/*"
      ],
      "@celebrum-ai/db": [
        "../db/dist/index"
      ],
      "@celebrum-ai/db/*": [
        "../db/dist/*"
      ],
      "@celebrum-ai/telegram-bot": [
        "../telegram-bot/dist/index"
      ],
      "@celebrum-ai/telegram-bot/*": [
        "../telegram-bot/dist/*"
      ],
      "@celebrum-ai/web": [
        "../web/dist/_worker.js"
      ]
    }
  },
  "include": [
    "src/**/*",
    "tests/middleware/rate-limit.test.ts",
    "tests/middleware/health.test.ts",
    "tests/middleware/error.test.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}